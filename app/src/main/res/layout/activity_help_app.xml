<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayoutHelp"
    tools:context=".helpApp.HelpAppActivity">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/transparent"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp">

            <TextView
                android:id="@+id/text_explanation"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:text="Clicar no botão ajuda \n\n Você pode clicar no boão de ajuda para saber explicação sobre a funcionalidade \n\n UMA DICA PRECISOSA \n\n Caso queira tem contato toda vez com as palavras que você errou, você pode configurar o WIDGET na area de trabalho do seu aparelho. para saber mais: https://blog.meuquantum.com.br/aprenda-o-que-sao-e-como-usar-widgets-no-android/   "
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/text1_list_size" />
        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ic_move_down_up"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_move_down_up" />

            <ImageView
                android:id="@+id/ic_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ic_close" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>

    <View
        android:id="@+id/tttt"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_alignParentBottom="true" />

</RelativeLayout>