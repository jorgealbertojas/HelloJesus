<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_widget_layout"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/button_ok"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_alignStart="@+id/empty_view"
                android:background="@drawable/selector_login_button_blue"
                android:src="@drawable/ic_thumb_up_white_24dp"
                />

                <TextView
                    android:id="@+id/update"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_marginLeft="40dp"
                    android:layout_alignTop="@+id/button_ok"
                    android:layout_toRightOf="@+id/button_ok"
                    android:duplicateParentState="true"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:gravity="center"
                    android:text="000"
                    android:background="@drawable/selector_login_button_blue"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    >
                        <requestFocus
                            android:duplicateParentState="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true" />
                </TextView>




            <TextView
                android:id="@+id/empty_view_information2"
                   android:layout_width="260dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_login_button_blue_acent"
                android:layout_alignStart="@+id/empty_view"
                android:layout_alignTop="@+id/empty_view"
                android:layout_marginTop="-25dp"
                android:textAlignment="center"
                android:singleLine="true"
                android:text="Click on the image to confirm the learning"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

                <TextView
                    android:id="@+id/empty_view"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="260dp"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_login_button_blue"
                    android:padding="@dimen/text1_list_padding"
                    android:layout_below="@+id/button_ok"
                    android:textAlignment="center"
                    android:textColor="@color/mb_white"
                    android:textSize="@dimen/text4_list_size" />

            <TextView
                android:id="@+id/empty_view_information"
                android:layout_marginTop="5dp"
                android:layout_width="260dp"
                android:layout_height="20dp"
                android:background="@drawable/selector_login_button_blue_acent"
                android:layout_alignStart="@+id/empty_view"
                android:layout_below="@+id/empty_view"
                android:textAlignment="center"
                android:singleLine="true"
                android:text="Click on the word to go to the next word"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
            />

                <ImageView
                    android:id="@+id/button_enter1"
                    android:layout_alignStart="@+id/empty_view"
                    android:layout_below="@+id/empty_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="15dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/selector_login_button_blue"
                    android:src="@drawable/ic_collections_white_24dp"
 />

                <ImageView
                    android:id="@+id/button_enter2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="15dp"
                    android:layout_alignTop="@+id/button_enter1"
                    android:layout_toRightOf="@+id/button_enter1"
                    android:layout_marginLeft="40dp"
                    android:background="@drawable/selector_login_button_blue"
                    android:src="@drawable/ic_g_translate_white_24dp"
      />

                <ImageView
                    android:id="@+id/button_enter3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="15dp"
                    android:layout_marginLeft="40dp"
                    android:layout_alignTop="@+id/button_enter2"
                    android:layout_toRightOf="@+id/button_enter2"
                    android:background="@drawable/selector_login_button_blue"
                    android:src="@drawable/ic_translate_white_24dp"
 />
                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignEnd="@id/empty_view"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_main_icon"
               />


        </RelativeLayout>
</LinearLayout>