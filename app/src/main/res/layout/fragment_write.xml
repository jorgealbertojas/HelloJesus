<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".write.WriteActivity">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingTop="4dp">

                    <RelativeLayout
                        android:id="@+id/teste"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="0.02"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/include_result"
                            layout="@layout/item_result_write"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true" />

                        <android.support.design.widget.FloatingActionButton
                            android:id="@+id/fab_function"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="8dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="bottom|right"
                            android:src="@drawable/exo_controls_play"
                            app:fabSize="normal" />


                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_weight="0.03">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/rv_content_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true">
                        </android.support.v7.widget.RecyclerView>

                        <android.support.v7.widget.RecyclerView

                            android:id="@+id/recycler_view"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/rv_content_list"
                            android:clipToPadding="false"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
                    </RelativeLayout>





                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top">


                    </FrameLayout>

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/fab_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_end"
                        android:layout_margin="10dp"
                        android:layout_gravity="bottom|right"
                        android:layout_toStartOf="@+id/fab_function"
                        android:src="@drawable/exo_controls_next"
                        app:fabSize="normal" />
                </FrameLayout>



            </LinearLayout>






        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/colorPrimary"
            android:orientation="vertical">
        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/sep_playerView_Audio"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@null"
            app:player_layout_id="@layout/exo_player_background"
            app:layout_constraintTop_toTopOf="parent" />




        </LinearLayout>


    </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
