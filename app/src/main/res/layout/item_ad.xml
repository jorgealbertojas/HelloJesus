<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/card_padding"
    android:layout_marginLeft="@dimen/card_padding"
    android:layout_marginRight="@dimen/card_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    card_view:cardCornerRadius="4dp"
    android:id="@+id/card_view"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <View
        android:id="@+id/v_view_title"
        android:layout_width="20dp"
         android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    </View>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginLeft="20dp">


            <ImageView
                android:id="@+id/imageViewAd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/iewCenter"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/ic_exercise" />

            <View
                android:id="@+id/imageViewBackground"
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:background="@drawable/gradient_transparent" />


            <TextView
                android:id="@+id/tv_date_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:paddingBottom="@dimen/text1_list_padding_bottom"
                android:paddingLeft="@dimen/text1_list_padding_left"
                android:paddingRight="@dimen/text1_list_padding_left"
                android:text="time"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                card_view:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tv_main_descriptionAd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/tv_date_end"
                android:paddingBottom="@dimen/text1_list_padding_bottom"
                android:paddingLeft="@dimen/text2_list_padding_left"
                android:paddingTop="@dimen/text2_list_padding_top"
                android:text="description u "
                android:textAlignment="textStart"
                android:textColor="@color/white"
                android:textStyle="bold"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toStartOf="@+id/tv_date_end"
                card_view:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tv_date_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="time"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
 />




            <TextView
                android:id="@+id/tv_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_main_descriptionAd"
                android:layout_marginStart="8dp"
                android:text="ffffffef"
                android:layout_alignRight="@+id/iewCenter"
                android:textColor="@color/white"
                android:textSize="@dimen/text2_list_size" />


            <View
                android:id="@+id/iewCenter"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"></View>



        </RelativeLayout>

        <TextView
            android:id="@+id/tv_main_nameAd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity=""
            android:gravity="top"
            android:lines="1"
            android:rotation="-90"
            android:text="casa"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:transitionName="nName"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>









</android.support.v7.widget.CardView>