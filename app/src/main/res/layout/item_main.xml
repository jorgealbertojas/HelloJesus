<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_padding"
    android:layout_marginLeft="@dimen/card_padding"
    android:layout_marginRight="@dimen/card_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Light"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true">
    <View
        android:id="@+id/v_view_title"
        android:layout_width="20dp"
         android:layout_height="match_parent"
        android:background="@color/colorPrimary">

    </View>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp">


        <TextView
            android:id="@+id/tv_main_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"

            android:paddingBottom="@dimen/text1_list_padding_bottom"
            android:paddingLeft="@dimen/text1_list_padding_left"
            android:paddingRight="@dimen/text1_list_padding_left"
            android:text="time"
            android:textColor="@color/NoAccent"
            android:textSize="@dimen/text2_list_size"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_main_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:lines="2"
            android:layout_toStartOf="@+id/iv_image_list"
            android:paddingBottom="@dimen/text1_list_padding_bottom"
            android:paddingLeft="@dimen/text2_list_padding_left"
            android:paddingTop="@dimen/text2_list_padding_top"
            android:text="description u "
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/iv_image_list"
            card_view:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/iv_image_list"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_main_time"
            android:src="@mipmap/ic_learning"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tv_main_description"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_bible"
            android:transitionName="imagem1"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_main_description"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:background="@color/white"
            android:text="tim f efr 2 3r wre rw wreg e"
            android:textColor="@color/NoAccent"
            android:textSize="@dimen/text2_list_size" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_music"
            android:transitionName="imagem2" />

        <TextView
            android:id="@+id/tv_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView"
            android:background="@color/white"
            android:text="tim f efr 2 3r wre rw wreg e"
            android:textColor="@color/NoAccent"
            android:textSize="@dimen/text2_list_size" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageView2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_write"
            android:transitionName="imagem3" />

        <TextView
            android:id="@+id/tv_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView2"
            android:background="@color/white"
            android:text="tim f efr 2 3r wre rw wreg e"
            android:textColor="@color/NoAccent"
            android:textSize="@dimen/text2_list_size" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_below="@+id/imageView3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:src="@mipmap/ic_exercise"
            android:transitionName="imagem4" />

        <TextView
            android:id="@+id/tv_title4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView4"
            android:layout_below="@+id/imageView3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/imageView3"
            android:background="@color/white"
            android:text="tim f efr 2 3r wre rw wreg e"
            android:textColor="@color/NoAccent"
            android:textSize="@dimen/text2_list_size" />




    </RelativeLayout>

        <TextView
            android:id="@+id/tv_main_name"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity=""
            android:rotation="-90"
            android:gravity="top"
            android:transitionName="nName"
            android:lines="1"
            android:text="casa"
            android:textColor="@color/colorAccent"
            android:textAlignment="center"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>









</android.support.v7.widget.CardView>